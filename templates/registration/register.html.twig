{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_widget(registrationForm.email, {attr: {'class':'form form-control', 'placeholder':"e-mail"}}) }}
        <br>
         {{ form_widget(registrationForm.firstname, {attr: {'class':'form form-control', 'placeholder':"Nom"}}) }}
         <br>
          {{ form_widget(registrationForm.lastname, {attr: {'class':'form form-control', 'placeholder':"pr√©nom"}}) }}
          <br>
        {{ form_widget(registrationForm.plainPassword, {attr: {'class':'form form-control', 'placeholder':"Mot de passe"}}, {
            label: 'Password'
        }) }}
        <br>
        {{ form_row(registrationForm.agreeTerms) }}
        <br>

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
