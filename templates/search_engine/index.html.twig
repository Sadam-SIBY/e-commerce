{% extends 'base.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block body %}


<div class="container ">
    <h2>Resultats de la recherche du mot : <span  style="Color:#CA6F1E" > {{word}} </span></h2>
    <div class="row">
        {% for product in products %}
            <div class ="col-md-3 mt-4">
                <div class="card" style="width: 18rem;">
                    <img  class = "img_card" src="{{asset('/uploads/images/'~product.image)}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <a  class= "product_link" href="{{path('app_home_product_show', {'id':product.id})}}"><h5 class="card-title">{{product.name}}</h5></a>
                        <p class="card-text">{{product.description|slice(0,30)}}...</p>
                        <h3>{{ product.price }} EUROS</h3>
                        <a href="{{ path('app_cart_new', {'id':product.id}) }}" class="btn btn-add-to-card">Ajouter au panier</a>
                    </div>
                </div>
             </div>
        {% endfor  %}
    </div>
    {# {{ knp_pagination_render($products)}} #}
     {# {{ knp_pagination_render(products, 'layouts/pagination_template.html.twig') }} #}
</div>
{% endblock %}
